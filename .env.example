# Namaskah SMS - Environment Configuration Template
# Copy to .env and fill with your actual values
# Never commit .env to version control

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
ENVIRONMENT=development
DEBUG=true
BASE_URL=http://localhost:8000
CORS_ORIGINS=*

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Development: SQLite (default)
DATABASE_URL=sqlite:///./namaskah_dev.db

# Production: PostgreSQL (recommended)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# ============================================================================
# SECURITY KEYS (Generate strong random keys - minimum 32 characters)
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_32_chars_minimum_length
JWT_SECRET_KEY=your_jwt_secret_key_32_chars_minimum_length

# ============================================================================
# GOOGLE OAUTH CONFIGURATION
# ============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================================================
# SMS PROVIDER CONFIGURATION
# ============================================================================

# TextVerified API
TEXTVERIFIED_API_KEY=your_textverified_api_key_here
TEXTVERIFIED_EMAIL=your_textverified_email@example.com

# 5SIM API (optional)
FIVESIM_API_KEY=your_fivesim_api_key_here
FIVESIM_EMAIL=your_fivesim_email@example.com
FIVESIM_BASE_URL=https://5sim.net/v1

# ============================================================================
# PAYMENT CONFIGURATION
# ============================================================================

# Paystack
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_email_user
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@example.com

# ============================================================================
# MONITORING & LOGGING (Optional)
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project_id
LOG_LEVEL=INFO

# ============================================================================
# CRYPTO ADDRESSES (Optional)
# ============================================================================
BITCOIN_ADDRESS=your_bitcoin_address
ETHEREUM_ADDRESS=your_ethereum_address
USDT_ADDRESS=your_usdt_address
SOLANA_ADDRESS=your_solana_address

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================
# Admin user credentials (required for startup)
ADMIN_EMAIL=admin@namaskah.app
ADMIN_PASSWORD=your_secure_admin_password_here

# ============================================================================
# TEST CONFIGURATION
# ============================================================================
# Test credentials (for testing only, never use in production)
TEST_EMAIL=admin@namaskah.app
TEST_PASSWORD=your_test_password_here
TEST_ADMIN_PASSWORD=your_test_admin_password_here
