{
  "info": {
    "name": "TextVerified API Tests",
    "description": "Test collection for TextVerified SMS verification service"
  },
  "item": [
    {
      "name": "Get Balance",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://www.textverified.com/api/Users/{{api_key}}/Balance",
          "host": ["www", "textverified", "com"],
          "path": ["api", "Users", "{{api_key}}", "Balance"]
        }
      }
    },
    {
      "name": "Get Available Numbers",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://www.textverified.com/api/Users/{{api_key}}/Numbers?service={{service_id}}",
          "host": ["www", "textverified", "com"],
          "path": ["api", "Users", "{{api_key}}", "Numbers"],
          "query": [{"key": "service", "value": "{{service_id}}"}]
        }
      }
    },
    {
      "name": "Purchase Number",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"service\": {{service_id}}, \"country\": \"{{country_code}}\"}"
        },
        "url": {
          "raw": "https://www.textverified.com/api/Users/{{api_key}}/Verifications",
          "host": ["www", "textverified", "com"],
          "path": ["api", "Users", "{{api_key}}", "Verifications"]
        }
      }
    },
    {
      "name": "Get SMS Messages",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://www.textverified.com/api/Users/{{api_key}}/Verifications/{{verification_id}}",
          "host": ["www", "textverified", "com"],
          "path": ["api", "Users", "{{api_key}}", "Verifications", "{{verification_id}}"]
        }
      }
    }
  ],
  "variable": [
    {"key": "api_key", "value": "YOUR_API_KEY"},
    {"key": "service_id", "value": "1"},
    {"key": "country_code", "value": "US"},
    {"key": "verification_id", "value": ""}
  ]
}