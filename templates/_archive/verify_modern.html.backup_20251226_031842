<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
let currentVerification = null;
let pollingInterval = null;
let countdownInterval = null;

document.addEventListener('DOMContentLoaded', async () => {
  await loadServices();
  await loadCountries();
  await loadBalance();
  await loadHistory();
  document.getElementById('verification-form').addEventListener('submit', handleSubmit);
  document.getElementById('service-select').addEventListener('change', updateCost);
  document.getElementById('country-select').addEventListener('change', updateCost);
});

async function loadServices() {
  try {
    const response = await axios.get('/api/verification/textverified/services');
    const services = response.data.services || [];
    
    const select = document.getElementById('service-select');
    
    const searchInput = document.createElement('input');
    searchInput.type = 'text';
    searchInput.placeholder = 'Search services...';
    searchInput.style.cssText = 'width: 100%; padding: 12px 16px; margin-bottom: 8px; background: var(--bg-input); border: 1px solid var(--border); border-radius: 10px; color: var(--text);';
    select.parentNode.insertBefore(searchInput, select);
    
    function populateServices(filter = '') {
      select.innerHTML = '<option value="">Select a service...</option>';
      const filtered = services.filter(s => 
        s.name.toLowerCase().includes(filter.toLowerCase()) ||
        (s.category && s.category.toLowerCase().includes(filter.toLowerCase()))
      );
      
      const grouped = filtered.reduce((acc, service) => {
        const category = service.category || 'other';
        if (!acc[category]) acc[category] = [];
        acc[category].push(service);
        return acc;
      }, {});
      
      Object.entries(grouped).forEach(([category, categoryServices]) => {
        const optgroup = document.createElement('optgroup');
        optgroup.label = category.charAt(0).toUpperCase() + category.slice(1);
        
        categoryServices.forEach(service => {
          const opt = document.createElement('option');
          opt.value = service.id;
          opt.textContent = `${service.name} ($${service.cost.toFixed(2)})`;
          optgroup.appendChild(opt);
        });
        
        select.appendChild(optgroup);
      });
    }
    
    searchInput.addEventListener('input', (e) => populateServices(e.target.value));
    populateServices();
    
    console.log('✅ Live services loaded:', services.length);
  } catch (e) { 
    console.error('❌ Services load failed:', e);
    showError('Failed to load services - please refresh the page'); 
  }
}

async function loadCountries() {
  try {
    const response = await axios.get('/api/verification/textverified/countries');
    const countries = response.data.countries || [];
    
    const select = document.getElementById('country-select');
    
    const searchInput = document.createElement('input');
    searchInput.type = 'text';
    searchInput.placeholder = 'Search countries...';
    searchInput.style.cssText = 'width: 100%; padding: 12px 16px; margin-bottom: 8px; background: var(--bg-input); border: 1px solid var(--border); border-radius: 10px; color: var(--text);';
    select.parentNode.insertBefore(searchInput, select);
    
    function populateCountries(filter = '') {
      select.innerHTML = '<option value="">Select a country...</option>';
      const filtered = countries.filter(c => 
        c.name.toLowerCase().includes(filter.toLowerCase()) ||
        c.code.toLowerCase().includes(filter.toLowerCase())
      );
      
      filtered.forEach(country => {
        const opt = document.createElement('option');
        opt.value = country.code;
        opt.textContent = `${country.name} (+${country.prefix})`;
        if (country.available) opt.style.color = 'var(--success)';
        select.appendChild(opt);
      });
    }
    
    searchInput.addEventListener('input', (e) => populateCountries(e.target.value));
    populateCountries();
    
    console.log('✅ Live countries loaded:', countries.length);
  } catch (e) { 
    console.error('❌ Countries load failed:', e);
    showError('Failed to load countries - please refresh the page'); 
  }
}

async function loadBalance() {
  try {
    // Try TextVerified balance first for consistency
    const tvResponse = await axios.get('/api/verification/textverified/balance');
    const balance = tvResponse.data.balance || 0;
    document.getElementById('balance-display').textContent = '$' + balance.toFixed(2);
    console.log('✅ Live TextVerified balance:', balance);
  } catch (e) {
    console.error('❌ TextVerified balance failed:', e);
    // Fallback to user balance
    try {
      const userResponse = await axios.get('/api/user/balance');
      const balance = userResponse.data.credits || 0;
      document.getElementById('balance-display').textContent = '$' + balance.toFixed(2);
      console.log('⚠️ Using user balance fallback:', balance);
    } catch (e2) {
      console.error('❌ All balance sources failed:', e2);
      document.getElementById('balance-display').textContent = '$0.00';
    }
  }
}

async function updateCost() {
  const service = document.getElementById('service-select').value;
  const country = document.getElementById('country-select').value;
  if (!service || !country) { document.getElementById('estimated-cost').textContent = '$0.00'; return; }
  try {
    const r = await axios.get('/api/pricing/estimate', { params: { service, country } });
    document.getElementById('estimated-cost').textContent = '$' + (r.data.total_cost || 0).toFixed(2);
  } catch (e) { 
    console.error('Cost error:', e);
    document.getElementById('estimated-cost').textContent = '$2.00';
  }
}

async function handleSubmit(e) {
  e.preventDefault();
  const service = document.getElementById('service-select').value;
  const country = document.getElementById('country-select').value;
  if (!service || !country) { showError('Please select service and country'); return; }
  
  const btn = document.getElementById('purchase-btn');
  btn.disabled = true;
  btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
  hideError(); hideSuccess();
  
  try {
    const r = await axios.post('/api/verification/request', { service, country });
    currentVerification = r.data;
    document.getElementById('phone-number').textContent = r.data.phone_number;
    document.getElementById('sms-code').textContent = '------';
    document.getElementById('waiting-section').style.display = 'none';
    document.getElementById('result-section').style.display = 'block';
    showSuccess('Verification purchased! Waiting for SMS...');
    startPolling();
    startCountdown();
  } catch (e) {
    showError(e.response?.data?.detail || 'Failed to purchase verification');
  } finally {
    btn.disabled = false;
    btn.innerHTML = '<i class="fas fa-bolt"></i> Get SMS Code';
  }
}

function startPolling() {
  let count = 0;
  pollingInterval = setInterval(async () => {
    count++;
    try {
      const r = await axios.get(`/api/verification/${currentVerification.verification_id}`);
      if (r.data.status === 'completed' && r.data.sms_code) {
        document.getElementById('sms-code').textContent = r.data.sms_code;
        clearInterval(pollingInterval);
        clearInterval(countdownInterval);
        showSuccess('SMS received!');
        loadHistory();
      }
    } catch (e) { console.error('Poll error:', e); }
    if (count >= 600) { clearInterval(pollingInterval); showError('Timeout - no SMS received'); }
  }, 2000);
}

function startCountdown() {
  let time = 1200;
  countdownInterval = setInterval(() => {
    time--;
    const m = Math.floor(time / 60);
    const s = time % 60;
    document.getElementById('countdown').innerHTML = `<i class="fas fa-clock"></i> ${m}:${s.toString().padStart(2, '0')}`;
    if (time <= 0) clearInterval(countdownInterval);
  }, 1000);
}

async function releaseNumber() {
  if (!currentVerification || !confirm('Release this number?')) return;
  try {
    await axios.post(`/api/verification/${currentVerification.verification_id}/release`);
    showSuccess('Number released');
    resetForm();
  } catch (e) { showError('Failed to release'); }
}

function copyCode() {
  const code = document.getElementById('sms-code').textContent;
  navigator.clipboard.writeText(code).then(() => showSuccess('Code copied!')).catch(() => showError('Copy failed'));
}

function resetForm() {
  currentVerification = null;
  clearInterval(pollingInterval);
  clearInterval(countdownInterval);
  document.getElementById('waiting-section').style.display = 'block';
  document.getElementById('result-section').style.display = 'none';
  document.getElementById('verification-form').reset();
  loadHistory();
}

async function loadHistory() {
  try {
    const r = await axios.get('/api/dashboard/activity/recent?limit=10');
    const tbody = document.getElementById('history-tbody');
    const items = r.data.activities || [];
    if (!items.length) { tbody.innerHTML = '<tr><td colspan="6" style="text-align: center; padding: 40px; color: var(--text-muted);">No verifications yet</td></tr>'; return; }
    tbody.innerHTML = items.map(v => `<tr><td>${v.service_name||'N/A'}</td><td>${v.country||'N/A'}</td><td style="font-family: monospace;">${v.phone_number||'N/A'}</td><td><span class="status status-${v.status}">${v.status}</span></td><td>$${(v.cost||0).toFixed(2)}</td><td>${new Date(v.created_at).toLocaleDateString()}</td></tr>`).join('');
  } catch (e) { 
    console.error('History error:', e);
    document.getElementById('history-tbody').innerHTML = '<tr><td colspan="6" style="text-align: center; padding: 40px; color: var(--text-muted);">No verifications yet</td></tr>';
  }
}

function showError(msg) { const el = document.getElementById('error-message'); el.textContent = msg; el.classList.add('show'); }
function hideError() { document.getElementById('error-message').classList.remove('show'); }
function showSuccess(msg) { const el = document.getElementById('success-message'); el.textContent = msg; el.classList.add('show'); setTimeout(() => el.classList.remove('show'), 3000); }
function hideSuccess() { document.getElementById('success-message').classList.remove('show'); }
</script>
</body>
</html>
