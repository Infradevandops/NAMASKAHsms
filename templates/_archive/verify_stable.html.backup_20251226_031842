<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/static/js/global-balance.js"></script>
<script>
let selectedService = null;
let selectedCountry = null;
let allServices = [];
let allCountries = [];

document.addEventListener('DOMContentLoaded', () => {
  loadBalance();
  loadServices();
  loadCountries();
  setupSearch();
});

async function loadBalance() {
  // Balance is synced globally via global-balance.js
}

async function loadServices() {
  try {
    const response = await axios.get('/api/verification/textverified/services');
    allServices = response.data.services || [];
    displayServices(allServices);
  } catch (error) {
    allServices = [];
    displayServices(allServices);
  }
}

async function loadCountries() {
  try {
    const response = await axios.get('/api/verification/textverified/countries');
    allCountries = response.data.countries || [];
    displayCountries(allCountries);
  } catch (error) {
    allCountries = [];
    displayCountries(allCountries);
  }
}

function displayServices(services) {
  const grid = document.getElementById('services-grid');
  grid.innerHTML = services.map(service => `
    <div class="option-card" onclick="selectService('${service.id}', '${service.name}', ${service.cost})">
      <div class="option-icon" style="background: var(--accent); color: white;">
        <i class="ph ph-chat-circle"></i>
      </div>
      <div class="option-name">${service.name}</div>
      <div class="option-price">$${service.cost.toFixed(2)}</div>
    </div>
  `).join('');
}

function displayCountries(countries) {
  const grid = document.getElementById('countries-grid');
  grid.innerHTML = countries.map(country => `
    <div class="option-card" onclick="selectCountry('${country.code}', '${country.name}')">
      <div class="option-icon" style="background: var(--success); color: white;">
        <i class="ph ph-globe"></i>
      </div>
      <div class="option-name">${country.name}</div>
      <div class="option-price">+${country.prefix}</div>
    </div>
  `).join('');
}

function setupSearch() {
  document.getElementById('service-search').addEventListener('input', (e) => {
    const filtered = allServices.filter(s => 
      s.name.toLowerCase().includes(e.target.value.toLowerCase())
    );
    displayServices(filtered);
  });
  
  document.getElementById('country-search').addEventListener('input', (e) => {
    const filtered = allCountries.filter(c => 
      c.name.toLowerCase().includes(e.target.value.toLowerCase())
    );
    displayCountries(filtered);
  });
}

function selectService(id, name, cost) {
  selectedService = {id, name, cost};
  document.querySelectorAll('#services-grid .option-card').forEach(card => card.classList.remove('selected'));
  event.target.closest('.option-card').classList.add('selected');
  updatePurchaseButton();
}

function selectCountry(code, name) {
  selectedCountry = {code, name};
  document.querySelectorAll('#countries-grid .option-card').forEach(card => card.classList.remove('selected'));
  event.target.closest('.option-card').classList.add('selected');
  updatePurchaseButton();
}

function updatePurchaseButton() {
  const btn = document.getElementById('purchase-btn');
  if (selectedService && selectedCountry) {
    btn.innerHTML = `<i class="ph ph-lightning"></i> Get SMS Code - $${selectedService.cost.toFixed(2)}`;
    btn.disabled = false;
  } else {
    btn.innerHTML = `<i class="ph ph-lightning"></i> Get SMS Code - $0.00`;
    btn.disabled = true;
  }
}

async function purchaseVerification() {
  if (!selectedService || !selectedCountry) return;
  
  const btn = document.getElementById('purchase-btn');
  btn.disabled = true;
  btn.innerHTML = '<i class="ph ph-spinner"></i> Processing...';
  
  try {
    const response = await axios.post('/api/verification/request', {
      service: selectedService.id,
      country: selectedCountry.code
    });
    
    document.getElementById('phone-number').textContent = response.data.phone_number;
    document.getElementById('waiting-state').style.display = 'none';
    document.getElementById('result-section').style.display = 'block';
    
    // Start polling for SMS
    pollForSMS(response.data.verification_id);
    
  } catch (error) {
    alert(error.response?.data?.detail || 'Purchase failed');
    btn.disabled = false;
    btn.innerHTML = `<i class="ph ph-lightning"></i> Get SMS Code - $${selectedService.cost.toFixed(2)}`;
  }
}

function pollForSMS(verificationId) {
  const interval = setInterval(async () => {
    try {
      const response = await axios.get(`/api/verification/${verificationId}`);
      if (response.data.status === 'completed' && response.data.sms_code) {
        document.getElementById('sms-code').textContent = response.data.sms_code;
        clearInterval(interval);
      }
    } catch (error) {
      console.error('Polling error:', error);
    }
  }, 3000);
  
  // Stop polling after 10 minutes
  setTimeout(() => clearInterval(interval), 600000);
}

function copyCode() {
  const code = document.getElementById('sms-code').textContent;
  navigator.clipboard.writeText(code);
  alert('Code copied!');
}
</script>
</body>
