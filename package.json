{
  "name": "namaskah-sms-analytics",
  "version": "2.0.0",
  "description": "Enhanced analytics dashboard for Namaskah SMS platform",
  "scripts": {
    "lint": "eslint static/js/**/*.js",
    "lint:fix": "eslint static/js/**/*.js --fix",
    "format": "prettier --write static/js/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run lint && npm run format && npm run test",
    "security-check": "npm audit && eslint static/js/**/*.js --rule 'no-eval: error' --rule 'no-innerHTML: error'"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.0",
    "dompurify": "^3.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/static/js/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "static/js/**/*.js",
      "!static/js/tests/**",
      "!static/js/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
